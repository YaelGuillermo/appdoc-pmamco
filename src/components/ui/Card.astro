---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden border border-gray-200 dark:border-gray-700 transition-all hover:shadow-lg">
  <div class="p-6">
    {icon && (
      <div class="flex items-center justify-center w-12 h-12 mb-4 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-500 dark:text-primary-300">
        <span class="text-2xl">{icon}</span>
      </div>
    )}
    <h3 class="text-lg font-semibold mb-2 text-gray-800 dark:text-white">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300">{description}</p>
  </div>
</div>